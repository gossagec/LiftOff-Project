@model IEnumerable<LiftOff_Project.Models.Song>;

@{
    ViewData["Title"] = "Index";
    ViewData["Year"] = "EraChosen";
}


<header>
    <h1>Song List</h1>
</header>

<body>
    
    <table class="table">
        <tr>
            <th>
                <form asp-controller="Home" asp-action="Index" method="get">
                    <p>
                        <input type="text" name="SearchString" />
                        <input type="submit" value="Search" />
                    </p>
                </form>
            </th>
            <th></th>
            <th></th>
            <th>
                <form asp-controller="Home" asp-action="EraChosen" method="get">
                    <p>
                        <input type="text" name="YearString" />
                        <input type="submit" value="Search" />
                    </p>
                </form>
            </th>
        </tr>
        <tr>
            <th>Title</th>
            <th>Artist</th>
            <th>Genre</th>
            <th>Year</th>
        </tr>

        @foreach (var song in Model)
        {
            <tr>
                <td>@song.Title</td>
                <td>@song.Artist</td>
                <td>@song.Genre</td>
                <td>@song.Year</td>
            </tr>
        }
    </table>
</body>